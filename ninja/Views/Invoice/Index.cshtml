@model IEnumerable<ninja.Models.InvoiceViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<nav aria-label="breadcrumb" >
    <ol class="breadcrumb ml-auto">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Invoices</li>
    </ol>
</nav>

<p>
    @Html.ActionLink("Create New", "New", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.TotalInvoice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.ActionLink(item.InvoiceDescription, "Details", new { @id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.TotalInvoice)
                </td>
                <td>
                    @Html.ActionLink("Update", "Update", new { id = item.Id }, new { @class = "btn btn-sm btn-info mr-2 mb-2 btn-block" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger btn-block", @onclick="return confirm('Are you sure you want to delete this item?');" })
                </td>
            </tr>
        }
    </tbody>

</table>
