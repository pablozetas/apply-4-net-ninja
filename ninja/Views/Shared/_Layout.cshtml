@{ 
    string nodisplay = "d-none";
    if (TempData["MessageError"] != null)
    {

        nodisplay = "d-block";
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google" content="notranslate">
    <title>@ViewBag.Title - Cliente SA App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/bundles/chartist/css")

    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
    <link rel="stylesheet" type="text/css" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

</head>
<body>
    <div class="navbar navbar-expand-lg fixed-top navbar-dark bg-success ">
        <div class="container  p-0 m-0">
            <a href="../" class="navbar-brand">Cliente SA</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item">
                        @Html.Partial("_LoginPartial")
                    </li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content p-0 m-0">
        <div class="error-message @nodisplay">
            <div class="row">
                <div class="col-lg-12 mt-2 alert alert-warning alert-dismissible fade show" role="alert">
                    <span>@TempData["MessageError"]</span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="d-flex col-lg-12">
                @if (this.User.Identity.IsAuthenticated)
                {
                <div class="bg-light border-right" id="sidebar-wrapper">
                    <div class="sidebar-heading">Start Bootstrap </div>
                    <div class="list-group list-group-flush">
                        <a href="/" class="list-group-item list-group-item-action bg-light">Dashboard</a>
                        <a href="@Url.Action("Index", "Invoice")" class="list-group-item list-group-item-action bg-light">Invoices</a>
                        <hr />
                        <small>&copy; @DateTime.Now.Year - Pablo Dario Zalazar</small>
                    </div>
                </div>
                }
                <div class="col-lg-10">
                    @RenderBody()
                </div>
            </div>
        </div>


        
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/applicationUtils")
    @Scripts.Render("~/bundles/bootstable")    
    @RenderSection("scripts", required: false)

    <script type="text/javascript">
        $(document).ready(function () {
            $('table:not(.no-format)').DataTable();
            $('.dateinput').datepicker({
                changeMonth: true,
                changeYear: true,
            });
        });
    </script>
</body>
</html>
