@model ninja.Models.InvoiceViewModel

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb" class="mt-2">
    <ol class="breadcrumb ml-auto">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Invoice")">Invoices</a></li>
        <li class="breadcrumb-item active" aria-current="page">Create new</li>
    </ol>
</nav>

<p>
    <div>
        @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-secondary" })
    </div>

</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <input type="hidden" name="detailsCount" id="detailsCount" value="@Model.Details.Count" />

    <div class="bg-light pt-4">
        @Html.Partial("_EditHead", Model)

        <hr />

        @Html.Partial("_EditDetails", Model)

        <hr />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
